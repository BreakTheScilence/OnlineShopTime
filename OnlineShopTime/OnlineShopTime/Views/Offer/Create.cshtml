@model OnlineShopTime.Models.Offers

@{
    ViewBag.Title = "Create";
}

<h2>@Resources.Home.CreateOffer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group" style="margin-left:5%; width: 85%">
            <label style="float: left">@Resources.Home.OfferPageTitleLabel:</label>
            <input class="form-control" name="Name" style="float: right; max-height: 28px; max-width: 88%;" />
        </div>

        <div class="form-group" style="margin-left:5%; width: 85%">
            <label style="float: left">@Resources.Home.OfferPageDescriptionLabel:</label>
            <textarea class="form-control" name="Description" style="float: right; max-width: 88%; resize: none"></textarea>
        </div>

        <div class="form-group" style="margin-left:5%; width: 85%">
            <label style="float: left; margin-top: 4px;">@Resources.Home.OfferPageTagsLabel:</label>
            <input class="form-control" name="Tags" style="float: right; max-height: 28px; max-width: 88%;" />
        </div>

        <div class="form-group" style="margin-left:5%; width: 85%">
            <label style="float: left; margin-top: 4px;">@Resources.Home.OfferPageImagesLabel:</label>
        </div>

        <div class="form-group" style="margin-left:14%; width: 85%">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>

    </div>
}

