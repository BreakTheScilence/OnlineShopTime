@model OnlineShopTime.Models.Offers
@using OnlineShopTime.Utils
@using CloudinaryDotNet

@{
    ViewBag.Title = @Model.Name;
    string defaultImage = "v6ac3uaxfe5gtlqtrbr7";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <br />

    <div class="container jumbotron">

        <div class="row">
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-8">
                <h3>@Model.Name</h3>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-4" style="text-align: right">
                <h3>PRICE</h3>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href="#">
                    @Cloud.Api.UrlImgUp.Transform(new Transformation().Width(400).Height(300).Crop("fill")).BuildImageTag(Model.Photo1URL ?? defaultImage, "id = image", "class=img-responsive")
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href="#">
                    @Cloud.Api.UrlImgUp.Transform(new Transformation().Width(400).Height(300).Crop("fill")).BuildImageTag(Model.Photo2URL ?? defaultImage, "id = image", "class=img-responsive")
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href="#">
                    @Cloud.Api.UrlImgUp.Transform(new Transformation().Width(400).Height(300).Crop("fill")).BuildImageTag(Model.Photo3URL ?? defaultImage, "id = image", "class=img-responsive")
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href="#">
                    @Cloud.Api.UrlImgUp.Transform(new Transformation().Width(400).Height(300).Crop("fill")).BuildImageTag(Model.Photo4URL ?? defaultImage, "id = image", "class=img-responsive")
                </a>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

