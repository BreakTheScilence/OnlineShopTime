@model OnlineShopTime.Models.RegisterViewModel
@{
    ViewBag.Title = @Resources.Home.Registration;
}

<br/>
<br/>
<div class="col-lg-2 col-md-2"></div>
<div class="col-lg-10 col-md-10"><h2>@Resources.Home.Registration</h2></div>

<div class="col-lg-2 col-md-2"></div>
<div class="jumbotron col-lg-8" style="padding: 0px; padding-top: 20px; padding-left: 20px">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
            <label class="col-md-3 control-label" for="UserName">@Resources.Home.UserName:</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label" for="Password">@Resources.Home.Password:</label>
            <div class="col-md-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label" for="ConfirmPassword">@Resources.Home.Confurm:</label>
            <div class="col-md-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" class="btn btn-default" value="@Resources.Home.Registration" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<br />
