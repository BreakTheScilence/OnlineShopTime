@using OnlineShopTime.Models;

@{
    ViewBag.Title = "Home Page";
}

<br />
<center>
    @using (@Html.BeginForm("TabClick", "Home"))
    {
        <div class="row">
            <div class="col-md-4">
                <div class="btn-group">
                    <button type="submit" name="tabID" class="btn btn-default" value="1" style="width: 250px">@Resources.Home.TopOffers</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="btn-group">
                    <button type="submit" class="btn btn-default" name="tabID" value="3" style="width: 250px">@Resources.Home.NewOffers</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="btn-group">
                    <button type="submit" class="btn btn-default" name="tabID" value="2" style="width: 250px">@Resources.Home.TopUsers</button>
                </div>
            </div>
        </div>
    }
</center>
<br />
@if (ViewBag.ViewData.ShowString == "TopOffers")
{
    for (int i = 0; i < 10; i++)
    {
        @Html.Partial("_OfferPartial");
    }
}

@if (ViewBag.ViewData.ShowString == "TopUsers")
{
    ViewBag.Position = false;
    foreach (Users TopUser in ViewBag.ViewData.TopUsers)
    {
        ViewBag.Position = !ViewBag.Position;
        @Html.Partial("_UserPartial", TopUser);
    }

}

@if (ViewBag.ViewData.ShowString == "NewOffers")
{
    for (int i = 0; i < 10; i++)
    {
        @Html.Partial("_OfferPartial");
    }
}
